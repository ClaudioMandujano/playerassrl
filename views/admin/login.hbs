<div class="container" style="display: grid; place-content: center;">
    <div class="row" style="width:300px; margin: 200px 0; ">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="form-group pb-3">
                    <input type="text" class="form-control" placeholder="Usuario" name="usuario">

                </div>
                <div class="form-group pb-2">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
                <button type="submit" class="btn btn-primary col-12 mb-2">Entrar</button>
               
            </form>
             {{#if error}}
                    <p class="text-danger">Usuario o clave incorrecto</p>
                {{/if}}
        </div>
    </div>
</div>
